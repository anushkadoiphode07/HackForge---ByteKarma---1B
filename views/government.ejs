<%- include("partials/header.ejs") %>
    <div class="gov-login">
        <ul class="nav nav-underline nav-fill">
            <li class="nav-item">
                <button class="nav-link active gov-register-button" id="register-tab" data-bs-toggle="tab" data-bs-target="#register-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true"><h4 style="color: white;">Register</h4></button>
            </li>
            <li class="nav-item">
                <button class="nav-link gov-login-button" id="login-tab" data-bs-toggle="tab" data-bs-target="#login-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true"><h4 style="color: white;">Login</h4></button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="register-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                <form action="/government/register" method="post">
                    <div class="mb-3 mt-2">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" class="form-control" name="username" placeholder="eg: abc@gmail.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            <div class="tab-pane fade" id="login-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                <form action="/government/login" method="post">
                    <div class="mb-3 mt-2">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="username" class="form-control" placeholder="eg: abc@gmail.com">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    
                    <br>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>