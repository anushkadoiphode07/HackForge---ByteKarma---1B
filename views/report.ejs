<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    
    <form action="/reportNewIssue" method="post" id="myForm">
        
        <!-- ... (form fields) ... -->
        <div class="row g-3 form_div">
          <div class="col-sm-6">
            <label for="Name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="Name" name="name" required="">
          </div>
  
          <div class="col-sm-6">
            <label for="state" class="form-label">State</label>
            <select name="state" id="stateInput">
                <% stateList.forEach(function(state){%>
                <option value=<%= state %>><%= state %></option>
                <%});%>
              </select>
          </div>
  
          <div class="col-12">
            <label for="govtDept" class="form-label">Department</label>
            <select name="dept" id="deptInput">
                <% govtDept.forEach(function(dept){%>
                <option value=<%= dept %>><%= dept %></option>
                <%});%>
              </select>
          </div>



  
          <div class="col-12">
            <label for="mail" class="form-label">Email </label>
            <input type="email" class="form-control" id="email" placeholder="you@example.com" required="" name="mail">
          </div>
  
          <div class="col-12">
            <label for="subject" class="form-label">Subject <span class="text-body-secondary">(Mention the Subject of your Grievance)</span></label>
            <input type="text" class="form-control" id="sub" placeholder="eg: Regarding potholes on roads in my area" name="subject">
          </div>
  
          <div class="col-12">
            <label for="issueDesc" class="form-label">Issue Description</label>
            <input type="text" class="form-control" id="issueDesc" placeholder="Describe issue you are facing" name="issueDesc">
          </div>
          
        </div>
    <button class="btn btn-secondary rounded-pill px-3 sub_btn" type="submit">Submit</button>
</form>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>